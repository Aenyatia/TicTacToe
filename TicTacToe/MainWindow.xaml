<Window x:Class="TicTacToe.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TicTacToe"
		mc:Ignorable="d"
		ResizeMode="NoResize"
		Title="Tic Tac Toe - Aenyatia" Height="900" Width="900">
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Button Name="Button00" Grid.Column="0" Grid.Row="0" />
		<Button Name="Button01" Grid.Column="1" Grid.Row="0" />
		<Button Name="Button02" Grid.Column="2" Grid.Row="0" />
		
		<Button Name="Button10" Grid.Column="0" Grid.Row="1" />
		<Button Name="Button11" Grid.Column="1" Grid.Row="1" />
		<Button Name="Button12" Grid.Column="2" Grid.Row="1" />
		
		<Button Name="Button20" Grid.Column="0" Grid.Row="2" />
		<Button Name="Button21" Grid.Column="1" Grid.Row="2" />
		<Button Name="Button22" Grid.Column="2" Grid.Row="2" />
	</Grid>
</Window>
